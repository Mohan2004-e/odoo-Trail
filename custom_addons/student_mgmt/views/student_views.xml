<odoo>
  <!-- Action -->
  <record id="action_student_mgmt_student" model="ir.actions.act_window">
    <field name="name">Students</field>
    <field name="res_model">student.mgmt.student</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Menu Root -->
  <menuitem id="menu_student_mgmt_root" name="Student Management"/>

  <!-- Submenu -->
  <menuitem id="menu_student_mgmt_students"
            name="Students"
            parent="menu_student_mgmt_root"
            action="action_student_mgmt_student"/>

  <!-- List View -->
  <record id="view_student_mgmt_student_list" model="ir.ui.view">
    <field name="name">student.mgmt.student.list</field>
    <field name="model">student.mgmt.student</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="student_class"/>
        <field name="date_of_birth"/>
      </list>
    </field>
  </record>

  <!-- Form View -->
  <record id="view_student_mgmt_student_form" model="ir.ui.view">
    <field name="name">student.mgmt.student.form</field>
    <field name="model">student.mgmt.student</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="date_of_birth"/>
          </group>
          <group>
            <field name="parent_name"/>
            <field name="address"/>
            <field name="student_class"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>


    <!-- Menus -->
    <menuitem id="menu_student_mgmt" name="Student Management"/>
    <menuitem id="menu_student" name="Students" parent="menu_student_mgmt"  action="action_student_mgmt_student"/>
</odoo>
